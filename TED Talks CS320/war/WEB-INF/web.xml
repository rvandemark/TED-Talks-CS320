<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
    <servlet-name>IndexServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.rvandemark.servlet.IndexServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>VideoDisplayServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.rvandemark.servlet.VideoDisplayServlet</servlet-class>
  </servlet>
  
  <!-- AJAX servlets. -->

  <!-- Servlet mappings -->
  <servlet-mapping>
    <servlet-name>IndexServlet</servlet-name>
    <url-pattern>/index</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>VideoDisplayServlet</servlet-name>
    <url-pattern>/videoDisplay</url-pattern>
  </servlet-mapping>
  
  <!--  AJAX servlet mappings. -->

  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>
